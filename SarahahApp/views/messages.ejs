<%- include('header.ejs')  %> 



    <div class="container text-center py-5 my-5 text-center">
        <div  class="card pt-5">
            <a href="" data-toggle="modal" data-target="#profile">

                <% if (photo!=undefined) { %>
                <img  src="<%= photo.photoPath %> " class="rounded avatar  " alt="">
                <% } %>

                <% if (photo==undefined) { %>
                <img  src="img/avatar.png" class="avatar " alt="">
                   
                    <% } %>


            </a>
            <h3 class="py-2"><%= name %> </h3>
            <button data-toggle="modal" data-target="#share" class="btn btn-default-outline share "><i class="fas fa-share-alt"></i>  Share Profile</button>
        </div>
    </div>
    <!-- profile photo Modal -->
    <div class="modal fade" id="profile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Change photo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/uploadFile" method="POST" enctype="multipart/form-data" >

                <div class="modal-body">

                    <div class="container">
                            <label  class="text-muted">The file size of the photo should not exceed 7 MB</label>
                            <input class="form-control" type="file" name="photo">

                    </div>
                </div>
                <div class="modal-footer">
                    <button  class="btn btn-outline-info">Upload</button>

                    <button type="button" class="btn btn-outline-danger">Remove Photo</button>
               
                </div>
            </form>

            </div>
        </div>
    </div>

    <!--  Share profile Modal -->
    <div class="modal fade" id="share" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Share Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><a href="<%= url %> " target="_blank" rel="noopener noreferrer"><%= url %></a> </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /modal -->


    <!-- =================messages=================== -->
    <div  class="container text-center my-5 text-center">
       <% if (massages.length==0) { %>
        <div   class="row">
            <div class="col-md-12">
                <div class="card py-5">
                    <p>You don't have any messages... </p>
                </div>
            </div>
        </div>
       <% } %>
        <div class="row">
            <% for( let i = 0; i < massages.length; i++ ) { %>
            <div class="col-md-12 my-3">
                <div class="card py-5">
                    <p><%= massages[i].massage %>  </p>
                </div>
            </div>
            <% } %>
        </div>
    </div>  
    
    <%- include('footer.ejs')  %> 
